{
  "name": "arm",
  "displayName": "ARM Assembly Language Editor",
  "description": "ARM Assembly Language Editor (IntelliSense, documentation tooltips, formatting, code analysis and more)",
  "version": "0.0.1",
  "author": "Mikhail Arkhipov",
  "icon": "images/ArmIcon.png",
  "publisher": "Mikhail-Arkhipov",
  "license": "MIT",
  "preview": true,
  "homepage": "https://github.com/MikhailArkhipov/vscode-arm",
  "bugs": {
    "url": "https://github.com/MikhailArkhipov/vscode-arm"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MikhailArkhipov/vscode-arm"
  },
  "keywords": [
    "ARM",
    "Assembly"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters",
    "Snippets"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "arm.openInstructionDocumentation",
        "title": "Open ARM instruction documentation in browser",
        "category": "ARM",
        "icon": {
          "light": "images/ArmIcon.png",
          "dark": "images/ArmIcon.png"
        }
      }
    ],
    "keybindings": [
      {
        "command": "arm.openInstructionDocumentation",
        "key": "ctrl+o ctrl+d",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "arm",
        "aliases": [
          "ARM",
          "Arm",
          "ARM Assembly Language"
        ],
        "extensions": [
          ".s",
          ".S",
          ".asm",
          ".sx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": [
      {
        "properties": {
          "arm.formatting.spaceAfterComma": {
            "type": "boolean",
            "default": true,
            "description": "Insert space after comma during formatting."
          },
          "arm.formatting.upperCaseInstructions": {
            "type": "boolean",
            "default": true,
            "description": "Emit instructions in uppercase during formatting and completion."
          },
          "arm.formatting.upperCaseDirectives": {
            "type": "boolean",
            "default": true,
            "description": "Emit directives in uppercase during formatting and completion."
          },
          "arm.completion.showAdvancedDirectives": {
            "type": "boolean",
            "default": false,
            "description": "Show advanced assembler directives in the completion list."
          },
          "arm.completion.showNeonInstructions": {
            "type": "boolean",
            "default": false,
            "description": "Show NEON instructions in the completion list."
          },
          "arm.completion.showVfpInstructions": {
            "type": "boolean",
            "default": false,
            "description": "Show VFP instructions in the completion list."
          },
          "arm.completion.showMmxInstructions": {
            "type": "boolean",
            "default": false,
            "description": "Show Wireless MMX instructions in the completion list."
          },

          "arm.diagnostics.show": {
            "type": "boolean",
            "default": true,
            "description": "Show code diagnostics."
          },
          "arm.diagnostics.unknownInstructions": {
            "type": "boolean",
            "default": true,
            "description": "Detect unknown instructions."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "build": "tsc -p ./",
    "test": "jest",
    "lint": "eslint **/*.ts",
    "prettier": "prettier -c ."
  },
  "devDependencies": {
    "@jest/globals": "^29.6.4",
    "@types/jest": "^29.5.4",
    "@types/node": "^14.18.33",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vscode/vsce": "^2.15.0",
    "chai": "^4.3.8",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.6.4",
    "madge": "^6.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "turndown": "^7.1.2",
    "typed-rest-client": "^1.8.11",
    "vscode-languageclient": "^8.0.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}