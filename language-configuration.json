{
	"comments": {
		"lineComment": "@",
		"blockComment": [ "/*", "*/" ]
	},
	// symbols used as brackets
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "(", "close": ")" },
		{ "open": "[", "close": "]" },
		{ "open": "'", "close": "'", "notIn": ["string"] },
		{ "open": "\"", "close": "\"", "notIn": ["string"] },
		{ "open": "/*", "close": " */", "notIn": ["string"] }
	],
  "folding": {
    "markers": {
      "start": "^[.macro|.func|.def|.if|.else|.elseif",
      "end": "^.endm|.endfunc|.endef|.endif"
    }
  },
}